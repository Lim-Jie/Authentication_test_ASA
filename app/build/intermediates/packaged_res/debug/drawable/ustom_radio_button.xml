<!-- custom_radio_button.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:textColor="#ffffff">
        <layer-list>
            <item android:left="4dp" android:right="4dp">
                <shape android:shape="oval">
                    <solid android:color="#20aeff" /> <!-- Color when selected -->
                    <size android:width="24dp" android:height="24dp" />
                </shape>
            </item>
            <item android:drawable="@drawable/profilepagebox" />
        </layer-list>
    </item>
    <item android:state_checked="false">
        <layer-list>
            <item android:left="4dp" android:right="4dp">
                <shape android:shape="oval">
                    <solid android:color="#E0E0E0" /> <!-- Color when not selected -->
                    <size android:width="24dp" android:height="24dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>