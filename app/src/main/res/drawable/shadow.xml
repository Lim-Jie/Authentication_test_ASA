<!-- res/drawable/shadow.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ededed" /> <!-- Background color -->
            <corners android:radius="0dp" /> <!-- Rounded corners -->
        </shape>
    </item>
    <item android:right="2dp" android:left="0dp" android:top="0dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Shadow color -->
            <corners android:radius="0dp" /> <!-- Rounded corners -->
        </shape>
    </item>
</layer-list>